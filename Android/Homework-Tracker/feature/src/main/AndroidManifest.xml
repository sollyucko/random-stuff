<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="io.github.sollyucko.homework_tracker.feature"> <!-- To auto-complete the email text field in the login form with the user's emails -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.READ_PROFILE"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	
	<application>
		<activity android:name=".LoginActivity" android:label="@string/app_name">
			<intent-filter android:order="1">
				<action android:name="android.intent.action.VIEW"/>
				
				<category android:name="android.intent.category.BROWSABLE"/>
				<category android:name="android.intent.category.DEFAULT"/>
				
				<data android:host="sollyucko.github.io" android:path="/homework_tracker/login" android:scheme="https"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
	</application>

</manifest>